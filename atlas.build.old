#!/bin/bash
#
CWD=`pwd`
PKGNAME=Atlas
VERSION=0.2.2
ARCH=i486
BUILD=2

PKGDIR=~/tmp/new/a
PKG=/tmp/package-$PKGNAME

rm -rf $PKG
mkdir -p $PKG

if [ ! -d $PKGNAME-$VERSION ]
then 
#cd /tmp
tar xzvf $PKGDIR/$PKGNAME-$VERSION.tar.gz
fi

cd $PKGNAME-$VERSION

cat << EOF | patch -p1
diff -ur Atlas-0.2.2/src/Map.cxx Atlas-0.2.2.x/src/Map.cxx
--- Atlas-0.2.2/src/Map.cxx	2001-09-22 16:57:35.000000000 +0100
+++ Atlas-0.2.2.x/src/Map.cxx	2004-08-18 21:53:58.000000000 +0100
@@ -311,7 +311,7 @@
     strcpy(outname, outp);
     opathl = strlen(outname);
     strcpy( scenerypath, mapobj.getFGRoot() );
-    strcat( scenerypath, "/Scenery/" );
+    strcat( scenerypath, "/Scenery/Terrain/" );
     spathl = strlen(scenerypath);
     
     if ( (dir1 = opendir(scenerypath)) == NULL ) {
diff -ur Atlas-0.2.2/src/MapMaker.cxx Atlas-0.2.2.x/src/MapMaker.cxx
--- Atlas-0.2.2/src/MapMaker.cxx	2003-01-06 21:02:37.000000000 +0000
+++ Atlas-0.2.2.x/src/MapMaker.cxx	2004-08-18 21:58:48.000000000 +0100
@@ -173,7 +173,7 @@
   char *subdir = new char[strlen(fg_root) + 512];  /* 512 should be *very* 
                                                       safe (too safe?) */
   strcpy( subdir, fg_root );
-  strcat( subdir, "/Scenery/" );
+  strcat( subdir, "/Scenery/Terrain/" );
   int slen = strlen( subdir );       // index to where we should append
 
   if (getVerbose());
@@ -691,7 +691,7 @@
     printf("%s:  ", path + plen);
 
   if ((dir = opendir(path)) == NULL) {
-    if (getVerbose()) printf("\n");
+    if (getVerbose()) printf(" -\n");
     return 0;
   }
 
diff -ur Atlas-0.2.2/src/MapPS.cxx Atlas-0.2.2.x/src/MapPS.cxx
--- Atlas-0.2.2/src/MapPS.cxx	2001-07-04 22:35:13.000000000 +0100
+++ Atlas-0.2.2.x/src/MapPS.cxx	2004-08-18 21:54:24.000000000 +0100
@@ -157,7 +157,7 @@
     strcpy(outname, outp);
     opathl = strlen(outname);
     strcpy( scenerypath, mapobj.getFGRoot() );
-    strcat( scenerypath, "/Scenery/" );
+    strcat( scenerypath, "/Scenery/Terrain/" );
     spathl = strlen(scenerypath);
     
     if ( (dir1 = opendir(scenerypath)) == NULL ) {
EOF

#chown -R root.root .
find . -perm 666 -exec chmod 644 {} \;
find . -perm 664 -exec chmod 644 {} \;
CFLAGS="-O2 -march=i486 -mcpu=i686" \
CXXFLAGS="-O2 -march=i486 -mcpu=i686" \
./configure --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var/lib \
	    --with-fgbase=/usr/share/FlightGear/data
	    --with-x
make

make install DESTDIR=$PKG

# strip execs
strip $PKG/usr/bin/*

# compress man pages
#find $PKG/usr/man -exec gzip {} \;

mkdir -p $PKG/usr/share/FlightGear/data/Fonts
cp src/AtlasPalette $PKG/usr/share/FlightGear/data
cp src/data/helvetica_medium.txf $PKG/usr/share/FlightGear/data/Fonts

mkdir -p $PKG/usr/doc/$PKGNAME-$VERSION
cp -a \
  AUTHORS COPYING INSTALL README* \
  $PKG/usr/doc/$PKGNAME-$VERSION
mkdir -p $PKG/install
cat <<EOF > $PKG/install/slack-desc
# HOW TO EDIT THIS FILE:
# The "handy ruler" below makes it easier to edit a package description.  Line
# up the first '|' above the ':' following the base package name, and the '|'
# on the right side marks the last column you can put a character in.  You must
# make exactly 11 lines for the formatting to be correct.  It's also
# customary to leave one space after the ':'.

          |-----handy-ruler------------------------------------------------------|
Atlas: Atlas
Atlas:
Atlas: 
Atlas:
Atlas:
Atlas:
Atlas:
Atlas:
Atlas:
Atlas:
Atlas:
EOF

cd $PKG
su -c "chown -R root.root *; makepkg $PKGNAME-$VERSION-$ARCH-$BUILD.tgz; chown -R simon.users $PKG"
