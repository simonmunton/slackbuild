     pkg ('local_list', [pwd(),'/local-list']);         \
     pkg ('global_list', [pwd(),'/global-list']);       \
     if (exist ('PKG_ADD.bak') == 2),                   \
	 movefile ('PKG_ADD.bak', 'PKG_ADD');           \
     endif;                                             \
     pkg -verbose -nodeps install ."

