#!/bin/bash
#
. build_funcs

TARNAME=razor-agents
TARNAMEEXTRA=
TARDIR=~/tmp/new/r
TAR_EXT=.tar.bz2
VERSION=2.82
VERSIONEXTRA=
BUILD=2

#TAR_PROG=
#TAR_OPTS=
#PKGNAME=
#PKGVERSION=
#BUILD_SUFFIX=
#ARCH=noarch


FULL_TARNAME=$TARDIR/$TARNAME$TARNAMEEXTRA-$VERSION$VERSIONEXTRA$TAR_EXT

pre_unpack

PKG=/tmp/package-$PKGNAME

if [ ! -f $FULL_TARNAME ]
then
  echo Can\'t find $FULL_TARNAME
  exit
fi

if [ ! -d $TARNAME-$VERSION ]
then 
#cd /tmp
$TAR_PROG $TAR_OPTS $FULL_TARNAME
(cd $TARNAME-$VERSION
#patch -p1 < $CWD/.diff
)
fi

pre_configure

cd $TARNAME-$VERSION
#chown -R root.root .
find . -perm 666 -exec chmod 644 {} \;
find . -perm 664 -exec chmod 644 {} \;

perl -f Makefile.PL

make PREFIX=/usr || exit

make install PREFIX=/usr DESTDIR=$PKG INSTALLSITEMAN1DIR=/usr/man/man1 \
     INSTALLSITEMAN3DIR=/usr/man/man3 INSTALLSITEMAN5DIR=/usr/man/man5 \
     INSTALLMAN5DIR=$PKG/usr/man/man5 INSTALL

ARCHLIB=`perl -V::archlib:`
ARCHLIB=${ARCHLIB#\'}
ARCHLIB=${ARCHLIB%\' }
(cd $PKG/$ARCHLIB
 mkdir -p $PKG/install
 mv perllocal.pod $PKG/install/perllocal.pod.append
 cat >> $PKG/install/doinst.sh << EOF
#
cat install/perllocal.pod.append >> $ARCHLIB/perllocal.pod
rm install/perllocal.pod.append
EOF
)

fix_links

compress_manpages

compress_info

cp -a \
  AUTHORS COPYING* INSTALL NEWS PLANS README* TODO \
  $PKG/usr/doc/$TARNAME-$VERSION

fix_docs

mkdir -p $PKG/install
cat <<EOF > $PKG/install/slack-desc
# HOW TO EDIT THIS FILE:
# The "handy ruler" below makes it easier to edit a package description.  Line
# up the first '|' above the ':' following the base package name, and the '|'
# on the right side marks the last column you can put a character in.  You must
# make exactly 11 lines for the formatting to be correct.  It's also
# customary to leave one space after the ':'.

    |-----handy-ruler------------------------------------------------------|
razor-agents: razor-agents
razor-agents:
razor-agents: 
razor-agents:
razor-agents:
razor-agents:
razor-agents:
razor-agents:
razor-agents:
razor-agents:
razor-agents:
EOF

post_install

cd $PKG
su -c "chown -R root.root *; \
find . -type d -exec chmod 755 {} \; ; \
makepkg -l y -c n $PKGNAME-$PKGVERSION-$ARCH-$BUILD$BUILD_SUFFIX.tgz; \
chown -R $USERNAME.$GROUP $PKG"
