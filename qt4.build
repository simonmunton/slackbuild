then
echo yes |
CFLAGS="-O2 -march=i486 $CPUOPT=i686" \
CXXFLAGS="-O2 -march=i486 $CPUOPT=i686" \
./configure -prefix /usr/lib/qt \
	    -release \
            -system-zlib \
            -system-libpng \
            -system-libmng \
            -system-libjpeg \
	    -no-phonon
	    -system-sqlite \
            -qt-gif \
            -stl \
	    -dbus \
            -plugin-sql-mysql \
            -plugin-sql-odbc \
            -plugin-sql-psql \
            -plugin-sql-sqlite \
            -I /usr/include/mysql -L/usr/lib/mysql -R/usr/lib/mysql \
	    -webkit \
	    -nomake examples \
	    -nomake demos \
            -v

#            -no-g++-exceptions \
#           -release \
fi

