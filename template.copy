
if [ -z "$1" ]
then
  echo Please specify source package
  exit
fi

if [ ! -z "$2" ]
then
  DIR=$2
else
  DIR='~/tmp/new/'
fi

if [ ! -z "$3" ]
then
  VER=$3
else
  VER=
fi

if [ -f $1.build ]
then
  echo $1.build exists
else
  sed -e "s/TEMPLATE/$1/g; s@^TARDIR=~/tmp/new/@TARDIR=$DIR@; s/^VERSION=/VERSION=$VER/"  template.build > $1.build
  chmod +x $1.build
fi
