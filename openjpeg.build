#!/bin/bash
#
. build_funcs

TARNAME=openjpeg
TARNAMEEXTRA=
TARSEP="_"
TARDIR=~/tmp/new/o
#TAR_EXT=.tar.gz
VERSION=v1_3
VERSIONEXTRA=
BUILD=1

WEBPAGE=""

#TAR_PROG=
#TAR_OPTS=
PKGNAME=OpenJPEG
#PKGVERSION=
#BUILD_SUFFIX=
#ARCH=noarch


FULL_TARNAME=${TARDIR}/${TARNAME}${TARNAMEEXTRA}${TARSEP}${VERSION}${VERSIONEXTRA}${TAR_EXT}

pre_unpack

PKG=/tmp/package-${PKGNAME}

if [ ! -f ${FULL_TARNAME} ]
then
  echo Can\'t find ${FULL_TARNAME}
  exit
fi

if [ ! -d ${TARNAME}-${VERSION} ]
then 
${TAR_PROG} ${TAR_OPTS} ${FULL_TARNAME}
mv OpenJPEG_${VERSION} ${TARNAME}-${VERSION}

if [ ! -d ${TARNAME}-${VERSION} ]
then 
  echo "${TARNAME}-${VERSION} directory not found"
  exit
fi

(cd ${TARNAME}-${VERSION}
 patch -p1 < ${CWD}/openjpeg-v1_3.diff
)
fi

pre_configure

cd ${TARNAME}-${VERSION}

fix_perms

mkdir build

if [ ${DO_CONFIGURE} == "yes" ]
then
(cd build
 cmake .. -DBUILD_EXAMPLES:BOOL=ON -DCMAKE_INSTALL_PREFIX="/usr" -DBUILD_SHARED_LIBS=ON -DCMAKE_SHARED_LINKER_FLAGS="-lm"
)
fi

if [ ${DO_MAKE} == "yes" ]
then
(cd build
LDFLAGS=-lm \
make ${NUM_JOBS} || exit
)
fi

if [ ${DO_INSTALL} != "yes" ]
then
  exit
fi

(cd build
LDFLAGS=-lm \
make install DESTDIR=${PKG}
)

mkdir -p ${PKG}/usr/include
mv ${PKG}/openjpeg/* ${PKG}/usr/include
rm -rf ${PKG}/openjpeg

mkdir -p ${PKG}/usr/man/man1
cp ${CWD}/openjpeg_image_to_j2k.1 ${PKG}/usr/man/man1/image_to_j2k.1
cp ${CWD}/openjpeg_index_create.1 ${PKG}/usr/man/man1/index_create.1
cp ${CWD}/openjpeg_j2k_to_image.1 ${PKG}/usr/man/man1/j2k_to_image.1


#strip_binaries

fix_links

compress_manpages

compress_info

cp -a \
  AUTHORS COPYING* INSTALL NEWS PLANS README* TODO \
  ${PKG}/usr/doc/${TARNAME}-${VERSION}

fix_docs

#-----handy-ruler-for-slack-desc-width-------------------------------|
make_slack_desc << EOF "open-source JPEG 2000 codec"
The OpenJPEG library is an  written in C 
language. It has been developed in order to promote the use of JPEG 
2000, the new still-image compression standard from the Joint 
Photographic Experts Group (JPEG). In addition to the basic codec, 
various other features are under development, among them the JP2 and 
MJ2 (Motion JPEG 2000) file formats, an indexing tool useful for the 
JPIP protocol, JPWL-tools for error-resilience, a Java-viewer for 
j2k-images, ... 

EOF

post_install

cd ${PKG}
su -c "chown -R root.root ${PKG}; \
find . -type d -exec chmod 755 {} \; ; \
makepkg -l y -c n ${PKGDIR}${PKGNAME}-${PKGVERSION}-${ARCH}-${BUILD}${BUILD_SUFFIX}.tgz; \
chown -R ${USERNAME}.${GROUP} ${PKG}"
