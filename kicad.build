#!/bin/bash
#
. build_funcs

TARNAME=kicad
TARNAMEEXTRA=
TARSEP="-"
TARDIR=${SOURCE}/k
#TAR_EXT=.tar.gz
VERSION=9.0.1
VERSIONEXTRA=
BUILD=1

WEBPAGE="http://kicad-pcb.org/"

#TAR_PROG=
#TAR_OPTS=
#PKGNAME=
#PKGVERSION=
#BUILD_SUFFIX=
#ARCH=noarch


FULL_TARNAME=${TARDIR}/${TARNAME}${TARNAMEEXTRA}${TARSEP}${VERSION}${VERSIONEXTRA}${TAR_EXT}

pre_unpack

PKG=/tmp/package-${PKGNAME}

if [ ! -f ${FULL_TARNAME} ]
then
  echo Can\'t find ${FULL_TARNAME}
  exit
fi

if [ ! -d ${TARNAME}-${VERSION} ]
then 
${TAR_PROG} ${TAR_OPTS} ${FULL_TARNAME}
#mv ${TARNAME}-${VERSION} ${TARNAME}-${VERSION}

if [ ! -d ${TARNAME}-${VERSION} ]
then 
  echo "${TARNAME}-${VERSION} directory not found"
  exit
fi

(cd ${TARNAME}-${VERSION}
# patch -p1 < ${CWD}/kicad-boost161.patch
# patch -p1 < ${CWD}/kicad-5.1.10.diff

# patch -p1 < ${CWD}/kicad-8.0.1.diff
# patch -p1 < ${CWD}/kicad-boost-1.86-001.diff
# patch -p1 < ${CWD}/kicad-boost-1.86-002.diff
# patch -p1 < ${CWD}/kicad-boost-1.86-003.diff
)
fi

pre_configure

cd ${TARNAME}-${VERSION}

fix_perms

PKGCFLAGS="-O2 -march=i686 ${CPUOPT}=i686"

PY3_SITE=`python3 -c 'import distutils.sysconfig; print(distutils.sysconfig.get_python_lib(plat_specific=1))'`

mkdir _BuilD_
cd _BuilD_

if [ ${DO_CONFIGURE} == "yes" ]
then
if [ -f ../configure ]
then
CFLAGS="${SLKCFLAGS}" \
CXXFLAGS="${SLKCFLAGS}" \
../configure --prefix=/usr \
            --sysconfdir=/etc \
            --libdir=/usr/lib${LIBDIRSUFFIX} \
            --localstatedir=/var/lib \
	    --mandir=/usr/man
elif [ -f ../CMakeLists.txt ]
then
export CC=clang
export CXX=clang++
cmake \
      -DCMAKE_BUILD_TYPE=RelWithDebInfo \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DMAN_INSTALL_DIR=/usr/man \
      -DLIB_SUFFIX=${LIBDIRSUFFIX} \
      -DSYSCONF_INSTALL_DIR=/etc \
      -DKICAD_REPO_NAME=stable \
      -DKICAD_BUILD_VERSION=${VERSION} \
      -DKICAD_SCRIPTING=ON \
      -DKICAD_SCRIPTING_MODULES=ON \
      -DKICAD_SCRIPTING_WXPYTHON=ON \
      -DKICAD_SCRIPTING_WXPYTHON_PHOENIX=on \
      -DKICAD_SCRIPTING_PYTHON3=on \
      -DKICAD_SKIP_BOOST=ON \
      -DKICAD_USE_OCC=on \
      -DKICAD_USE_EGL=on \
      -DKICAD_BUILD_PNS_DEBUG_TOOL=on \
      -DKICAD_DRC_PROTO=off \
      -DKICAD_BUILD_QA_TESTS=off \
      -DPYBIND11_FINDPYTHON=on \
      -DPYTHON_SITE_PACKAGE_PATH=${PY3_SITE} \
      ..


#      -DCMAKE_CXX_STANDARD=14 \

#      -DCMAKE_C_FLAGS:STRING="${SLKCFLAGS}" \

fi

fi

if [ ${DO_MAKE} == "yes" ]
then
make ${NUM_JOBS} || exit
fi

if [ ${DO_INSTALL} != "yes" ]
then
  exit
fi

make install DESTDIR=${PKG}

cd ..

strip_binaries

fix_links

compress_manpages

compress_info

cp -a \
  AUTHORS COPYING* INSTALL NEWS PLANS README* TODO \
  ${PKG}/usr/doc/${TARNAME}-${VERSION}

fix_docs

#-----handy-ruler-for-slack-desc-width-------------------------------|
make_slack_desc << EOF "A Cross Platform and Open Source Electronics Design Automation Suite"
A Cross Platform and Open Source Electronics Design Automation Suite

EOF

post_install

cd ${PKG}
su -c "chown -R root:root ${PKG}; \
find . -type d -exec chmod 755 {} \; ; \
makepkg -l y -c n ${PKGDIR}${PKGNAME}-${PKGVERSION}-${ARCH}-${BUILD}${BUILD_SUFFIX}.tgz; \
chown -R ${USERNAME}:${GROUP} ${PKG}"
