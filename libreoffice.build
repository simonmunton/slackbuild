mkdir -p $PKG/usr/{bin,share}

if [ -d libo ]
then
  rm -rf libo
fi
mkdir libo
cd libo
tar xzvf $INPUT
tar xzvf $INPUT1
tar xzvf $INPUT2
tar xzvf $INPUT3

# If we can't find the RPMS directory, find it and put it somewhere
# that it can be accessed
