mkdir -p $PKG/usr/doc/libreoffice-$VERSION

find ./L* -name "LICENSE*" -exec cp {} $PKG/usr/doc/libreoffice-$VERSION \;
find ./L* -name "README*" -exec cp {} $PKG/usr/doc/libreoffice-$VERSION \;

chmod -x $PKG/usr/doc/libreoffice-$VERSION/*

CWD=`pwd`

cd $PKG

for file in $CWD/*.rpm
do
    extractPackage $file
done

