# build utility functions
#
CWD=`pwd`



pre_unpack ()
{
USERNAME=`id -un`
GROUP=`id -gn`

: ${PKGNAME:=$TARNAME}
: ${BUILD_SUFFIX:=sm}

: ${ARCH:=i486}


CPUOPT="-mcpu"
GCCVER=`gcc -v 2>&1 > /dev/null | grep "gcc version" | sed -e "s/.*gcc version *//"`
case $GCCVER in
  3.4*|4.*) CPUOPT="-mtune" ;;
esac


}


pre_configure ()
{
CPUOPT="-mcpu"
GCCVER=`gcc -v 2>&1 > /dev/null | grep "gcc version" | sed -e "s/.*gcc version *//"`
case $GCCVER in
  3.4*|4.*) CPUOPT="-mtune" ;;
esac

}


