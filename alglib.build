pre_configure

cd ${TARNAME}-${VERSION}

fix_perms

cd cpp
chmod -R -x,+X *

PKGCFLAGS="-O2 -march=i686 ${CPUOPT}=i686"

if [ ${DO_CONFIGURE} == "yes" ]
then
:
