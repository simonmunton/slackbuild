#make ${NUM_JOBS} || exit
pushd src
g++ -c ${SLKCFLAGS} *.cpp
ar r libalglib.a *.o
popd
fi

if [ ${DO_INSTALL} != "yes" ]
then
  exit
fi

#make install DESTDIR=${PKG}
mkdir -p ${PKG}/usr/lib${LIBDIRSUFFIX}
mkdir -p ${PKG}/usr/include/alglib
cp src/*.a ${PKG}/usr/lib${LIBDIRSUFFIX}
