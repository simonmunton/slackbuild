#!/bin/bash
#
. build_funcs

TARNAME=mythtv
TARNAMEEXTRA=
TARSEP="-"
TARDIR=~/tmp/new/m
#TAR_EXT=.tar.gz
VERSION=0.27_fixes
VERSIONEXTRA=
BUILD=20

WEBPAGE=""

#TAR_PROG=
#TAR_OPTS=
#PKGNAME=
