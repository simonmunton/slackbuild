mkdir -p ${PKG}/usr/{bin,lib${LIBDIRSUFFIX},include}

cp dist/linux${LIBDIRSUFFIX}/bin/* ${PKG}/usr/bin
mv ${PKG}/usr/bin/iv ${PKG}/usr/bin/iv-oiio
cp -P dist/linux${LIBDIRSUFFIX}/lib/* ${PKG}/usr/lib${LIBDIRSUFFIX}
cp -pr dist/linux${LIBDIRSUFFIX}/include/* ${PKG}/usr/include

PYTHON_VERSION=`python -V 2>&1 | gawk '{print $2}' | cut -d. -f1,2`
mkdir -p ${PKG}/usr/lib${LIBDIRSUFFIX}/python${PYTHON_VERSION}/site-packages
cp dist/linux${LIBDIRSUFFIX}/python/* ${PKG}/usr/lib${LIBDIRSUFFIX}/python${PYTHON_VERSION}/site-packages

strip_binaries

fix_links

compress_manpages

compress_info

cp -a \
  AUTHORS COPYING* INSTALL NEWS PLANS README* TODO dist/linux${LIBDIRSUFFIX}/doc/* \
  ${PKG}/usr/doc/${TARNAME}-${VERSION}

fix_docs

#-----handy-ruler-for-slack-desc-width-------------------------------|
make_slack_desc << EOF "OpenImageIO image library"
