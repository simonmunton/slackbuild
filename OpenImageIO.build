#      .

fi

if [ ${DO_MAKE} == "yes" ]
then
CFLAGS="${SLKCFLAGS} -D__STDC_CONSTANT_MACROS" \
CXXFLAGS="${SLKCFLAGS} -D__STDC_CONSTANT_MACROS" \
make ${NUM_JOBS} || exit
fi

if [ ${DO_INSTALL} != "yes" ]
then
  exit
fi

#CFLAGS="${SLKCFLAGS}" \
