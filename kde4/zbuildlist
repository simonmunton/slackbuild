#libbluedevil
#bluedevil



declare -A BLACKLIST

BLACKLIST=(
[kdeplasma-addons]=1
[perlqt]=1
[perlkde]=1
[pykde4]=1
)

JOBS=8

DODISTCC=0




for f in ${FILES[*]}
do
  if [ ! -e /tmp/packages/$f.built ]
  then

    if [ "${BLACKLIST[$f]}" == "1" ]
    then
      unset CC
      unset CXX
      unset DISTCC_HOSTS

      ./$f.build -j1
    else
      if [ "$DODISTCC" == "1" ]
      then
        export CC="distcc gcc"
        export CXX="distcc g++"
        export DISTCC_HOSTS="hades/6 localhost"
      fi

      ./$f.build -j$JOBS
    fi

    su -c "upgradepkg --install-new --reinstall /tmp/packages/$f*"

    touch /tmp/packages/$f.built
  fi

done

echo alldone
